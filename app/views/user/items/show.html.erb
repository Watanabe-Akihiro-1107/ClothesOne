


<div class = "item_box">
		<%= attachment_image_tag(@item, :image, :fill, 350, 600, class: "item_image") %></div>
			<div class ="item_detail">
			<table class ="table table-hover">
			<tr><td>SHOP</td><td><%= @item.brand_name %></td></tr>
			<tr><td>PRICE</td><td><%= @item.price %></td></tr>
			<tr><td>INTRODUCTION</td><td><%= @item.introduction %></td></tr>
			<tr><td>CATEGORY</td><td><%= @item.category.category_name %></td></tr>
			<tr><td><%= link_to edit_item_path ,class: "btn_detail" do %><button type="button" class="btn btn-light">EDIT</button><% end %></td>
			<td><%= link_to item_path, method: :delete ,class: "btn_detail" do %><button type="button" class="btn btn-danger">DELETE</button><% end %></td></tr>
			</table>
			</div>
</div>

