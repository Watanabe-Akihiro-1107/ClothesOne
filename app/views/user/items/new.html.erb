<%= form_with model: @item, local:true do |f| %>
<%= f.label :item_name %>
<%= f.text_field :item_name %><br>
<%= f.label :price %>
<%= f.text_field :price %><br>
<%= f.label :introduction %>
<%= f.text_area :introduction %><br>
<%= f.attachment_field :image %>

<%= f.radio_button :brand1, 0 ,checked: true %><strong>　ブランドを入力　</strong>
<%= f.text_field :brand_name %><br>

<%= f.radio_button :brand1, 1 %><strong>　既存のブランドから選択</strong>
<%= f.collection_select :brand_id, Brand.all, :id, :brand_name, include_blank: "選択して下さい" %><br>

<strong>カテゴリーを選択</strong><br>
<%= f.collection_select :category_id, Category.all, :id, :category_name, include_blank: "選択して下さい" %>

<%= f.submit %>


<% end %>