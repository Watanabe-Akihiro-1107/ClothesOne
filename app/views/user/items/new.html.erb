<div class="new_item_text"><h2>New Item</h2></div>

<div class= "new_item_form">
	<%= form_with model: @item, local:true do |f| %>

	<dl>
		<dt><%= f.label :item_name %></dt>
		<dd><%= f.text_field :item_name %></dd><br>
		<dt><%= f.label :price %></dt>
		<dd><%= f.text_field :price %></dd><br>
		<dt><%= f.label :introduction %></dt>
		<dd><%= f.text_area :introduction %></dd><br>

		<dt><%= f.radio_button :brand1, 0 ,checked: true %><strong>　ブランドを入力　</strong></dt>
		<dd><%= f.text_field :brand_name %></dd><br>

		<dt><%= f.radio_button :brand1, 1 %><strong>　既存のブランドから選択</strong></dt>
		<dd><%= f.collection_select :brand_id, Brand.all, :id, :brand_name, include_blank: "選択して下さい" %></dd><br>

		<dt><strong>カテゴリーを選択</strong></dt>

		<dd><%= f.collection_select :category_id, Category.where(id: 4..23), :id, :category_name, include_blank: "選択して下さい" %></dd>
		<dt><%= f.attachment_field :image,class:"field_btn" %></dt><dd></dd><br>
	</dl>

	<%= f.submit "アイテムを投稿" ,class: "btn btn-success"%>


	<% end %>
</div>