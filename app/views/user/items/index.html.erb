	<div class="item_index_main">
		<%= render "user/items/sidebar" %>
		<% if flash[:notice] %>
		<div class="flash_notice"><%= flash[:notice] %></div>
		<% end %>

		<div class="item_index">
			<% if @items.count > 0 %>
				<% @items.each do |item|%>
					<div class="item_mainbox">
					<%= link_to item_path(item.id),class: "item_index_image" do %>
						<%= attachment_image_tag(item, :image, :fill, 250, 300)%>
					<% end %>
					<div class="item_user">
						<%= attachment_image_tag item.user, :profile_image, format: 'jpg', size: "40x40" , class: "img-circle", fallback: "no_image.jpg"%>
						<%= item.user.nickname%>
						<% if current_user != item.user %>
						<div class="follow_box">
							<div id="follows_buttons_<%= item.id %>">
				   			<%= render partial: 'user/relationships/follow', locals: { item: item} %>
							</div></div>
						<% end %>
					</div>
					</div>
				<% end %>

			<% else %>
				<div class="item_index_text"><h1>まだアイテムはありません</h1></div>
			<% end %>
		</div>
	</div>
	<script src="flash.js"></script>



