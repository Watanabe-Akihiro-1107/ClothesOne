<div class="user_show_all">
    <div class="user_show_head">
		<table class="table">
			<tr><td>Name</td><td><%= @user.nickname %></td></tr>
			<tr><td>follows</td><td><%= link_to @user.follower.count, user_follows_path(@user) %></td></tr>
  			<tr><td>followers</td><td><%= link_to @user.followed.count, user_followers_path(@user) %></td></tr>
            <tr><td><%= link_to "いいねしたアイテム", favorites_path(@user.id) %></td></tr>
    	</table>
    		<% if current_user != @user %>
        	<% if current_user.following?(@user) %>
        	<%= link_to 'フォロー解除', user_relationships_path(@user.id), method: :delete , class: "btn btn-danger user_show_btn" %>
        	<% else %>
        	<%= link_to 'フォローする', user_relationships_path(@user.id), method: :post,class: "btn btn-success user_show_btn "%>
        	<% end %>
        <% end %>
    </div>

    <div class ="user_show_index">
        <h2><%= @user.nickname %>'s Item</h2>
        <% @items.each do |item|%>
            <%= link_to item_path(item.id),class: "item_index_image" do %><%= attachment_image_tag(item, :image, :fill, 240, 400) %><% end %>
        <% end %>
    </div>
</div>