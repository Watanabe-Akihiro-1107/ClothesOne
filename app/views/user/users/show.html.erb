<%= render "user/users/profile" %>
<div class="item_index_main">
	<div class="item_index_cusion">
		<% if @items.count > 0 %>
			<% @items.each do |item|%>
				<div class="item_mainbox">
					<%= link_to item_path(item.id),class: "item_index_image" do %>
					<%= attachment_image_tag(item, :image, :fill, 250, 300)%>
					<% end %>
					<div class="user_show_sub">
						<div class ="user_favorite_icon">
							<div id="favorites_buttons_<%= item.id %>">
						   	<%= render partial: 'user/favorites/favorite', locals: { item: item} %>
							</div>
					　　</div>
						<div class ="user_comment_icon">
							<%= image_tag("comment.png")%> <p class="item_comment_count"><%= item.item_comments.count%></p>
						</div>
					</div>
				</div>
			<% end %>
		<% else %>
			<h2>まだアイテムはありません</h2>
		<% end %>
	</div>
</div>
