<div class="notification_index">

		<div class="notification_detail">
		<h1>お知らせ</h1><hr>
		<% @notifications.each do |notification|%>
				<% if @notifications.count == 0 %>
					<h2>お知らせはありません</h2>
				<% end %>
				<!-- 受け取ったactionカラムに応じて表示を分岐させる -->
				<% if notification.action == "follow" %>
					<%= link_to user_path(notification.visitor) do %><%= notification.visitor.nickname %><% end %>が
					あなたをフォローしました<%= " (#{time_ago_in_words(notification.created_at)} 前)" %><hr>
				<% elsif notification.action == "like" %>
					<%= link_to user_path(notification.visitor) do %><%= notification.visitor.nickname %><% end %>さんが
					<%= link_to item_path(notification.item) do %>あなたの投稿<% end %>にいいねしました<%= " (#{time_ago_in_words(notification.created_at)} 前)" %><hr>
				<% elsif notification.action == "comment"%>
					<!-- コメントした人ユーザーのIDとコメントされた投稿のユーザーのIDが違う場合 -->
					<% if notification.visited.id != notification.item.user_id %>
					<%= link_to user_path(notification.item_comment.user) do %><%= notification.item_comment.user.nickname %><% end %>さんが
					<%= link_to item_path(notification.item) do %><%= notification.item.user.nickname %>さんの投稿<% end %>にコメントしました。<%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
					<% else %>
					<%= link_to user_path(notification.item_comment.user) do %><%= notification.visitor.nickname %><% end %>が
					<%= link_to item_path(notification.item) do %>あなたの投稿<% end %>にコメントしました。<%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
					<% end %><hr>
				<% end %>
		<% end %>
		<%= link_to "通知ボックスを空にする", notifications_destroy_all_path, method: :delete ,class: "btn btn-danger"%>
		</div>


</div>
