<div class="inquiry_new" style="margin-top:60px; margin-left:40px">

<h3>お問い合わせフォーム</h3>
<%= form_with model: @inquiry, local:true do |f| %>

	<%= f.text_field :name ,class: "inquiry_name" ,placeholder:"名前"%><br>
	<%= f.text_field :email,class: "inquiry_email"  ,placeholder:"メールアドレス" %><br>
	<%= f.text_area :message,class: "inquiry_message" ,placeholder:"お問い合わせ内容" %><br>
	<%= f.submit "内容を送信" ,class: "btn btn-info"%>
<% end %>

</div>
