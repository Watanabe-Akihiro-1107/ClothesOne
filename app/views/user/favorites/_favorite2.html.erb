<%if user_signed_in? %>
	<% if item.favorited_by?(current_user) %>
		<%= link_to item_favorites_path(item.id), method: :delete, remote: true do %>
		<%= image_tag("red_heart.png")%> <p class="item_comment_count">(<%= item.favorites.count %>)</p>
		<% end %>
	<% else %>
		<%= link_to item_favorites_path(item.id), method: :post, remote: true do %>
		<%= image_tag("black_heart.png")%> <p class="item_comment_count"><%= item.favorites.count %></p>
		<% end %>
	<% end %>

<% else %>
	<%= image_tag("black_heart.png")%> <p class="item_comment_count"><%= item.favorites.count %></p>
<% end %>