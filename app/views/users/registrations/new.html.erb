<div class="signin_form">
<div class="signin_form_detail">

<h2>SIGN UP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :nickname, autofocus: true,placeholder:"NICKNAME",class: "new_session_btn"  %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "EMAIL",class: "new_session_btn"  %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"PASSWORD",class: "new_session_btn"  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"PASSWORD",class: "new_session_btn"  %>
  </div>

  <div class="actions">
    <%= f.submit "SIGN UP" , class: "new_submit_btn" %>
  </div>
<% end %>
</div>
</div>

